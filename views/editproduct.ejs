  <html>
    <head>
      <%- include('./partials/header.ejs'); %>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
      <style>
          body{
              background-image:url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSw6Za7EyEMl5_cxF8VAnlNp2ZCFgtrqPaFTQ&usqp=CAU');
              background-size: 100% 100%;
              height: 821px;
          }
      </style>
    </head>
    <body>
      <form action='/editproduct1/<%=prodata.id%>' method="POST">
        <div class="container text-center">
        <br>
        <br>
          <h2 class="text-center">Edit Product</h2>
          <div class="mb-5 mt-5 row">
              <label for="name" class="col-sm-1 col-form-label"><h5>Name:</h5></label>
              <div class="col-sm-10">
                <input type="text" class="form-control" name="name" value="<%=prodata.name%>">
              </div>
          </div>
          <div class="mb-5 row">
          <label for="email" class="col-sm-1 col-form-label"><h5>Price:</h5></label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="price" value="<%=prodata.price%>">
          </div>
        </div>
        <div class="mb-5 row">
          <label for="password" class="col-sm-1 col-form-label"><h5>Quantity:</h5></label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="quantity" value="<%=prodata.quantity%>">
          </div>
        </div>
        <div class="mb-5 row">
          <label for="age" class="col-sm-1 col-form-label"><h5>Description:</h5></label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="description" value="<%=prodata.description%>">
          </div>
        </div>
        <button type="submit" class="btn btn-danger text-center btn-lg" id="btn">Submit</button>
        </div>
      </form>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </body>
  </html>