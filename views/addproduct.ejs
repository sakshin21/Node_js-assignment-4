  <body>
    <form action='/addproduct1' method="POST">
      <div class="container text-center">
      <br>
      <br>
        <h2 class="text-center">Add Product</h2>
        <div class="mb-5 mt-5 row">
            <label for="name" class="col-sm-1 col-form-label"><h5>Name:</h5></label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="name" id="i1">
            </div>
        </div>
        <div class="mb-5 row">
        <label for="email" class="col-sm-1 col-form-label"><h5>Price:</h5></label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="price" id="i2">
        </div>
      </div>
      <div class="mb-5 row">
        <label for="password" class="col-sm-1 col-form-label"><h5>Quantity:</h5></label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="quantity" id="i3">
        </div>
      </div>
      <div class="mb-5 row">
        <label for="age" class="col-sm-1 col-form-label"><h5>Description:</h5></label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="description" id="i4">
        </div>
      </div>
      <button type="submit" class="btn btn-danger text-center btn-lg" id="btn">Submit</button>
      </div>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
